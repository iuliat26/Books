<mvc:View
	controllerName="org.ubb.books.controller.Booklist"
   	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

   <Table id="idBooksTable"
		items="{
			path: '/Z801_BOOK_ENTITY_IUTASet',
			sorter: {
				path: 'Title'
			}
		}"
		growing="true"
		growingThreshold="10"
		mode="SingleSelectLeft">

		<headerToolbar>
		<Toolbar>
			<content>
				<Button 
					text="Add" 
					press="onAddBook"/>	
				<Button 
					text="Update" 
					press="onUpdateBook"/>
				<Button
					text="Delete"
					press="onDeleteBook"/>
			</content>
		</Toolbar>
		</headerToolbar>
	
		<columns>
			<Column>
				<Text text="Title" />
			</Column>
			<Column>
				<Text text="Author" />
			</Column>
			<Column>
				<Text text="Published on" />
			</Column>
			<Column>
				<Text text="Language" />
			</Column>
         <Column>
				<Text text="Available books" />
			</Column>
			<Column>
				<Text text="Total books" />
			</Column>
		</columns>

		
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Title}"
						text="{Isbn}"/>
					<Text text="{Author}" />
					<Text text="{ 
							path: 'DatePublished',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
					<Text text="{Language}" />
					<Text text="{= parseInt(${Availbooks}) }" />
					<Text text="{= parseInt(${Totalbooks}) }" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
   
</mvc:View>